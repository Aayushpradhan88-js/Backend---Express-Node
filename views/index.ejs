<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white"> 
            <form action="/create" method="post">
                <input class="block w-full rounded-lg outline-none  px-5 py-2 bg-orange-400"  type="text" placeholder="Title goes here.." name="title">
                <textarea class="block w-full rounded-lg outline-none text-color-white lg px-5 mt-2 py-2  resize-none bg-orange-400	"  placeholder="Write your task details..." name="details" ></textarea>
                <input class="mt-2 bg-blue-600 rounded-lg px-5 py-2" type="submit" value="Create tasks">
            </form>
        </div>
        <div class="tasks flex gap-4 flex-wrap p-10">
            <% if(files && files.length > 0) { %>
                <% files.forEach(function(val){ %>
                    <div class="task rounded-lg w-72 px-3 py-4 bg-blue-600">
                        <h1 class="text-3xl tracking-tighter"><%= val %> </h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-red-900 inline-block" href="/files/<%= val %>"> Read More.</a>
                            <a href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>  
                <% }); %>
            <% } else{ %>
                <h1 class="bg-zinc-900 rounded-lg">No taks are done yet.</h1>
            <% } %>
        </div>
    </div>
    <script src="/javascripts/code.js"></script>
</body>
</html>